<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Blue Vajra<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "style" %>
  </head>
  <body>
  <div class="bodyContainer">
  <div class="headerContainer">
    <header>
      <h1>Blue Vajra - blog layout</h1>
      <h2>My Digital Playground for All Things Me. Buddhism, Tibetan, Martial Arts, Coding, and Coffee.</h2>
    </header>
    </div>

    <div class="contentContainer">
      <%= yield %>
    </div>
    
    <div class="footerContainer">
    <footer class="recent">
    <section>
      <h2>Recent Articles</h2>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </ol>
    </section>
    <section>
      <h2>Tags</h2>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to tag, tag_path(tag) %> (<%= articles.size %>)</a></li>
        <% end %>
      </ol>
    </section>
    <section>
      <h2>By Year</h2>
      <ol>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to year, blog_year_path(year) %> (<%= articles.size %>)</a></li>
        <% end %>
      </ol>
      </section>
    </footer>
    </div>
    </div>
  </body>
</html>
