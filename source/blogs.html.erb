<div class="articles">
  <% article = blog.articles[0] %>
  <div class="blog">
    <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
    <aside>
      <time>
        <span class="day"><%= article.date.strftime('%d') %></span><span class="month"><%= article.date.strftime('%b') %></span><span class="year"><%= article.date.strftime('%Y') %></span>
      </time>
    </aside>
    <section>
      <%= article.summary(350) %>
      <p><a href="<%= article.url %>">Read more.</a></p>
    </section>
  </div>
  <div class="blog_list">
    <ul>
      <% blog.articles[1...blog.articles.length].each do |article| %>
        <li><span><%= article.date.strftime('%b %e') %></span><%= link_to article.title, article %></li>
      <% end %>
    </ul>
  </div>
</div>